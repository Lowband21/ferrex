# Database Configuration
POSTGRES_USER=rusty_media
POSTGRES_PASSWORD=changeme_strong_password
POSTGRES_DB=rusty_media
DATABASE_URL=postgres://rusty_media:changeme_strong_password@localhost:5432/rusty_media

# Redis Configuration
REDIS_PASSWORD=changeme_redis_password
REDIS_URL=redis://:changeme_redis_password@localhost:6379/

# Server Configuration
SERVER_PORT=3000
RUST_LOG=info

# Media Configuration
MEDIA_PATHS=/path/to/your/media/library
MEDIA_PATH=/path/to/your/media/library

# TMDB API Configuration
TMDB_API_KEY=<REDACTED>

# Security
JWT_SECRET=changeme_jwt_secret_at_least_32_chars_long

# Docker Registry (for production)
DOCKER_REGISTRY=docker.io
DOCKER_IMAGE=yourusername/rusty_media_server
VERSION=latest

# SSL/TLS Configuration (optional)
ENABLE_HTTPS=false
SSL_CERT_PATH=/certs/cert.pem
SSL_KEY_PATH=/certs/key.pem

# Database Backend (postgres or surrealdb)
DATABASE_BACKEND=postgres